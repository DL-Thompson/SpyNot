<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SelectRatingActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/risk_background"
        android:text="Please select your warning rating. \nIf an installed application scores this warning, a window will display that shows you rating details."
        android:textSize="18dp" 
        android:textColor="@android:color/white"
        android:layout_weight="10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/radioHigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rating_top_background"
                android:checked="true"
                android:gravity="center"
                android:text="High Rating"
                android:textSize="25dp" 
                android:textColor="@android:color/holo_red_dark"/>

            <RadioButton
                android:id="@+id/radioMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/rating_top_background"
                android:gravity="center"
                android:text="Medium Rating"
                android:textSize="25dp" 
                android:textColor="@android:color/holo_orange_dark"/>

            <RadioButton
                android:id="@+id/radioLow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rating_top_background"
                android:gravity="center"
                android:text="Low Rating"
                android:textSize="25dp" 
                android:textColor="@android:color/holo_green_dark"/>

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="10"
        android:orientation="vertical" >

        <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/risk_background"
        android:text="You can select custom permissions below. If the installed application contains that permission, the warning window will be displayed."
        android:textSize="18dp" 
        android:textColor="@android:color/white"
        android:layout_weight="50"/>
        
        <TextView
        android:id="@+id/textCustomPermissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rating_top_background"
        android:gravity="center"
        android:text="Custom Permission Warnings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp" 
        android:layout_weight="50"/>

    </LinearLayout>

</LinearLayout>
